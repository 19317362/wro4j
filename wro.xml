<?xml version="1.0" encoding="UTF-8"?>
<groups xmlns="http://www.isdc.ro/wro"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.isdc.ro/wro wro.xsd">

  <group name="all">
  	<js>/asset/common/**.js</js>
    <css>/asset/common/**.css</css>
    <group-ref>syntaxHighlighter</group-ref>
  </group>
  
  <group name="syntaxHighlighter">
    <js>/asset/syntaxHighlighter/src/shCore.js</js>
    <js>/asset/syntaxHighlighter/src/**.js</js>
    <js>/asset/syntaxHighlighter/*.js</js>
    <css>/asset/syntaxHighlighter/styles/shCore.css</css>
    
    <group-ref>theme-fadeToGrey</group-ref>
  </group>
  
  <group name="theme-django">
    <css>/asset/syntaxHighlighter/styles/shCoreDjango.css</css>
    <css>/asset/syntaxHighlighter/styles/shThemeDjango.css</css>
  </group>
  
  <group name="theme-eclipse">
    <css>/asset/syntaxHighlighter/styles/shCoreEclipse.css</css>
    <css>/asset/syntaxHighlighter/styles/shThemeEclipse.css</css>
  </group>
  
  <group name="theme-emacs">
    <css>/asset/syntaxHighlighter/styles/shCoreEmacs.css</css>
    <css>/asset/syntaxHighlighter/styles/shThemeEmacs.css</css>
  </group>
  
  <group name="theme-fadeToGrey">
    <css>/asset/syntaxHighlighter/styles/shCoreFadeToGrey.css</css>
    <css>/asset/syntaxHighlighter/styles/shThemeFadeToGrey.css</css>
  </group>
</groups>
